FROM python:3.10-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc libomp-dev && \
    rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir numpy tokenizers

WORKDIR /flashlm
COPY ternary_engine.c train_v61.py ./

ENV OMP_NUM_THREADS=8
CMD ["python3", "train_v61.py"]
